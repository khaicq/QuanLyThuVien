@model QuanLyThuVien.Models.NhanVien

@{
    ViewData["Title"] = "Sửa thông tin tài khoản";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Thay đổi thông tin tài khoản</h2>

<h4>Tài khoản: @Model.TaiKhoan</h4>
<hr /> <br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MatKhau" class="control-label"></label>
                <input asp-for="MatKhau" class="form-control" />
                <span asp-validation-for="MatKhau" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HoTen" class="control-label"></label>
                <input asp-for="HoTen" class="form-control" />
                <span asp-validation-for="HoTen" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NgaySinh" class="control-label"></label>
                <input asp-for="NgaySinh" class="form-control" />
                <span asp-validation-for="NgaySinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoaiNhanVien" class="control-label"></label>
                <select asp-for="LoaiNhanVien" class="form-control">
                    <option value="0">Quản lý</option>
                    <option value="1">Bán hàng</option>
                </select>
                <span asp-validation-for="LoaiNhanVien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DiaChi" class="control-label"></label>
                <input asp-for="DiaChi" class="form-control" />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IDChiNhanh" class="control-label"></label>
                @Html.DropDownList("IDChiNhanh", (IEnumerable<SelectListItem>)ViewBag.ListChiNhanh, new { @Class="form-control"})
                <span asp-validation-for="IDChiNhanh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu thông tin" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="QuanLy" class="btn btn-default">Quay về trang quản lý</a>
</div>
<br /><br />
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
